<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/buttonRecord"
                android:id="@+id/recordButton" android:layout_gravity="left" android:layout_weight="1"/>
        <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/buttonPlay"
                android:id="@+id/playButton" android:layout_gravity="right" android:layout_weight="1"
                android:enabled="false"/>
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Idle..."
            android:scrollbars = "vertical"
            android:id="@+id/statusText" android:layout_gravity="center"/>
</LinearLayout>

